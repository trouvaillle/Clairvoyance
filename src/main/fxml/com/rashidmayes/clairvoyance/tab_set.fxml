<GridPane xmlns:fx="http://javafx.com/fxml" id="rootPane" fx:id="rootPane" fx:controller="com.rashidmayes.clairvoyance.SetController">
	<children>

        <ToolBar GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.hgrow="ALWAYS" GridPane.rowIndex="0" GridPane.vgrow="NEVER">
            <HBox>
                <!--<Button text="Stop">
					<HBox.margin>
						<Insets right="8"/>
					</HBox.margin>
				</Button>-->
				<Button text="Refresh" id="btnRefresh" fx:id="btnRefresh" onAction="#handleBtnRefresh">
					<HBox.margin>
						<Insets right="8"/>
					</HBox.margin>
				</Button>
				<TextField id="txtSearch" fx:id="txtSearch" promptText="search..." minWidth="320" onKeyPressed="#handleTxtSearch">
					<HBox.margin>
						<Insets right="8"/>
					</HBox.margin>
				</TextField>
				<CheckBox id="chkRegex" fx:id="chkRegex" selected="true" text="regex" alignment="BOTTOM_LEFT" onAction="#handleChkRegex"/>
            </HBox>
        </ToolBar>



	<SplitPane dividerPositions=".7" GridPane.columnIndex="0" GridPane.columnSpan="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS">
		<items>
	
			<GridPane>
				<children>
				
					<TableView id="dataTable" fx:id="dataTable"
						GridPane.columnIndex="1" GridPane.columnSpan="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS">
					</TableView>
			
			     </children>
			</GridPane>	
			
			<TextArea id="recordDetails" fx:id="recordDetails"  wrapText="false" editable="false"/>
		</items>
	
	</SplitPane>

	<ListView id="pages" fx:id="pages" GridPane.columnIndex="1" GridPane.columnSpan="1" GridPane.rowIndex="1" minWidth="50" prefWidth="50"/>
		

	</children>
	
	<stylesheets>
		<URL value="@tab_set.css" />
	</stylesheets>
</GridPane>